<!-- Novo Cliente -->
<div class="modal fade" id="modal-primary">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content bg-primary">
      <div class="modal-header">
        <h4 class="modal-title">Por favor, preencha todos os campos!</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <!-- form start -->
        <form id="newCustomer" action="/" method="POST" role="form" autocomplete="off">
          <div class="card-body">

            <div class="row">
              <div class="form-group col-6">
                <label for="nameCustomer">Nome</label>
                <input type="text" id="nameCustomer" name="name" class="form-control"
                  placeholder="Digite o nome do cliente" autofocus>
              </div>

              <div class="form-group col-6">
                <label for="personalDocumentCustomer">CPF</label>
                <input id="personalDocumentCustomer" name="personal_document" type="text" class="form-control"
                  placeholder="Digite o cpf do cliente">
              </div>
            </div>

            <div class="row">
              <div class="form-group col-8">
                <label for="emailCustomer">Email</label>
                <input type="text" id="emailCustomer" name="email" class="form-control"
                  placeholder="Digite o email do cliente">
              </div>

              <div class="form-group col-4">
                <label for="zipcodeCustomer">Cep</label>
                <input id="zipcodeCustomer" name="zip_code" type="text" class="form-control" placeholder="Digite o cep">
              </div>
            </div>

            <div class="row">
              <div class="form-group col-10">
                <label for="streetCustomer">Logradouro</label>
                <input id="streetCustomer" name="street" type="text" class="form-control"
                  placeholder="Digite o logradouro">
              </div>
              <div class="form-group col-2">
                <label for="streetNumberCustomer">Número</label>
                <input id="streetNumberCustomer" name="street_number" type="text" class="form-control" placeholder="Nº">
              </div>

            </div>
            <div class="row">

              <div class="form-group col-3">
                <label for="complementCustomer">Complemento</label>
                <input id="complementCustomer" name="street_complement" type="text" class="form-control"
                  placeholder="Ex: AP 206">
              </div>
              <div class="form-group col-9">
                <label for="neighborhoodCustomer">Bairro</label>
                <input id="neighborhoodCustomer" name="neighborhood" type="text" class="form-control"
                  placeholder="Digite o nome do bairro">
              </div>
            </div>
            <div class="row">
              <div class="form-group col-10">
                <label for="cityCustomer">Cidade</label>
                <input id="cityCustomer" name="city" type="text" class="form-control"
                  placeholder="Digite o nome da cidade">
              </div>
              <div class="form-group col-2">
                <label for="ufCustomer">Estado</label>
                <input id="ufCustomer" name="state" type="text" class="form-control" placeholder="UF">
              </div>

            </div>

            <div class="row">
              <div class="form-group col-2">
                <label for="dddCustomer">DDD</label>
                <input id="dddCustomer" name="ddd" type="text" class="form-control" placeholder="DDD">
              </div>
              <div class="form-group col-10">
                <label for="phoneCustomer">Telefone</label>
                <input id="phoneCustomer" name="phone" type="text" class="form-control"
                  placeholder="Digite o número do telefone">
              </div>

            </div>
          </div>
          <!-- /.card-body -->
          <div class="card-footer">
            <button type="button" class="btn btn-outline-light" data-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-outline-light float-right">Criar cliente</button>
          </div>
        </form>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>

